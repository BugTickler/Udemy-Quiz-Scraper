{
  "manifest_version": 3,
  "name": "Udemy Quiz Scraper",
  "version": "1.0",
  "description": "Scrape Udemy test questions to Excel",
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://www.udemy.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
